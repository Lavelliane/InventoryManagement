
@{
    ViewData["Title"] = "Home Page";
}
 <header class="masthead text-white text-center mt-5">
            <div class="container d-flex align-items-center flex-column">
                <!-- Masthead Avatar Image-->
                <img class="masthead-avatar mb-5" src="~/Images/header.png" alt="..." />
                <!-- Masthead Heading-->
                <h1 class="header-text masthead-heading text-uppercase text-warning mb-0">EZ Gaming Web</h1>
                <!-- Icon Divider-->
                <div class="divider-custom divider-light">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
                <!-- Masthead Subheading-->
                <p class="masthead-subheading font-weight-light mb-0">Manage your Inventory Right Now.</p>
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary p-2 mt-5" style="width:150px">
			        Explore
		        </a>
            </div>
</header>

