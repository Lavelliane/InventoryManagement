@{
    
}


  <section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://i.pinimg.com/originals/40/e6/6b/40e66b3e4fe330cd50bef3ce463b460f.png"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 bg-light p-5 rounded-3 bg-gradient text-dark border-light">
        <form method="post" asp-controller="User" asp-action="Login">
           
          <!-- Email input -->
          <div class="form-outline mb-4">
                <label asp-for="Email"></label>
			    <input asp-for="Email" class="form-control"/>
			    <span asp-validation-for="Email" class="text-danger"></span>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <label asp-for="Password"></label>
			    <input asp-for="Password" type="password" class="form-control"/>
			    <span asp-validation-for="Password" class="text-danger"></span>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
              <label class="form-check-label" for="form1Example3"> Remember me </label>
            </div>
            <a asp-controller="User" asp-action="Register" class="text-dark">Create an Account</a>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn w-100 btn-primary btn-lg btn-block">Sign in</button>
        </form>
      </div>
    </div>
  </div>
</section>
    