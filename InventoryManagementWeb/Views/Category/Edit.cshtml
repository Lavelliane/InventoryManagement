@model Category

<form method="post" asp-controller="Category" asp-action="Edit" enctype="multipart/form-data">
	<input asp-for="Id" hidden />
	<div class="border-secondary p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Item</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			
			<input asp-for="Name" class="form-control" hidden/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			
			<input asp-for="Description" class="form-control" hidden/>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control"/>
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="mb-3">
			
			<input asp-for="price" class="form-control" hidden/>
			<span asp-validation-for="price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			
			<input asp-for="imgURL" class="form-control" hidden/>
			<span asp-validation-for="imgURL" class="text-danger"></span>
		</div>
		<div class="mb-3">
		
			<input asp-for="ImageName" class="form-control" hidden/>
			<span asp-validation-for="ImageName" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-secondary" style="width:150px">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-info ml-5" style="width:150px">
			Back to Inventory 
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


